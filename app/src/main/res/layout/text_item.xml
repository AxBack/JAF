<?xml version="1.0" encoding="utf-8"?>
<com.axb.jaf.TextItem xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/text_item"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/generic_margin"
                android:text="test"
                android:textColor="@color/labelColor"
                android:textAppearance="@android:style/TextAppearance.Material.Subhead"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/desc_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:paddingBottom="@dimen/item_padding_ends"
        android:paddingEnd="@dimen/generic_margin"
        android:paddingStart="@dimen/generic_margin"
        android:text="text"
        android:textColor="@color/descColor"/>

</com.axb.jaf.TextItem>
